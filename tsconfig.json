{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"types": [
			"@types/node",
			"vite/client"
		],
		"paths": {
			"@root/*": [
				"src/*"
			],
			"@app/*": [
				"src/application/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	]
}
