{
	"name": "stranerd",
	"description": "Stranerd App",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"postinstall": "yarn jetify",
		"serve": "vite",
		"preserve": "yarn bin:project:env",
		"build": "vue-tsc --noEmit && vite build",
		"prebuild": "yarn bin:project:env && rm -rf android/app/build",
		"postbuild": "cap sync",
		"lint": "eslint --ext .js,.vue --fix src",
		"prepare": "husky install",
		"ionic:serve": "yarn serve",
		"prerun:android": "rm -rf android/app/build",
		"run:android": "ionic cap run android -l --port 8080 --external",
		"run:ios": "ionic cap run ios -l --port 8080 --external",
		"bin:project:setup": "node bin/project.js setup",
		"bin:project:version": "node bin/project.js version",
		"bin:project:env": "node bin/project env",
		"bin:icons": "cordova-res ios --copy --skip-config && cordova-res android --copy --skip-config",
		"android:debug:apk": "yarn build && cd android && ./gradlew assembleDebug && ./gradlew installDebug && cd ..",
		"android:release:apk": "yarn build && cd android && ./gradlew assembleRelease && cd .. && yarn android:sign:apk",
		"android:release:bundle": "yarn build && cd android && ./gradlew bundleRelease && cd .. && yarn android:sign:bundle",
		"android:sign:bundle": "apksigner sign --ks ./android/stranerd.keystore --ks-key-alias kevin@stranerd.com --min-sdk-version 22 ./android/app/build/outputs/bundle/release/app-release.aab",
		"android:sign:apk": "zipalign 4 ./android/app/build/outputs/apk/release/app-release-unsigned.apk ./android/app/build/outputs/apk/release/app-release.apk && apksigner sign --ks ./android/stranerd.keystore --ks-key-alias kevin@stranerd.com ./android/app/build/outputs/apk/release/app-release.apk"
	},
	"dependencies": {
		"@awesome-cordova-plugins/core": "^5.42.0",
		"@awesome-cordova-plugins/file-opener": "^5.42.0",
		"@capacitor/android": "^3.5.1",
		"@capacitor/app": "1.1.1",
		"@capacitor/clipboard": "^1.0.8",
		"@capacitor/core": "3.5.1",
		"@capacitor/dialog": "^1.0.7",
		"@capacitor/filesystem": "^1.1.0",
		"@capacitor/haptics": "1.1.4",
		"@capacitor/ios": "^3.5.1",
		"@capacitor/keyboard": "1.2.2",
		"@capacitor/push-notifications": "^1.0.9",
		"@capacitor/share": "^1.1.2",
		"@capacitor/splash-screen": "^1.2.2",
		"@capacitor/status-bar": "1.0.8",
		"@capacitor/storage": "^1.2.5",
		"@capacitor/toast": "^1.0.8",
		"@codetrix-studio/capacitor-google-auth": "^3.1.3",
		"@ionic/pwa-elements": "^3.1.1",
		"@ionic/vue": "^6.1.6",
		"@ionic/vue-router": "^6.1.6",
		"@stranerd/validate": "^3.3.0",
		"axios": "^0.27.2",
		"capacitor-blob-writer": "1.0.4",
		"cordova-plugin-file-opener2": "^3.0.5",
		"katex": "^0.15.6",
		"socket.io-client": "^4.5.1",
		"sweetalert2": "^11.4.14",
		"vue": "^3.2.35",
		"vue-pdf-embed": "^1.1.2",
		"vue-router": "^4.0.15",
		"vue3-editor": "^0.1.1"
	},
	"devDependencies": {
		"@capacitor/cli": "3.5.1",
		"@capacitor/project": "^2.0.10",
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@ionic/cli": "^6.19.1",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"@vitejs/plugin-vue": "^2.3.3",
		"@vue/eslint-config-typescript": "^10.0.0",
		"autoprefixer": "^10.4.7",
		"cordova-res": "^0.15.4",
		"eslint": "^8.16.0",
		"eslint-plugin-vue": "^9.0.1",
		"husky": "^8.0.1",
		"jetifier": "^2.0.0",
		"postcss": "^8.4.14",
		"sass": "^1.52.1",
		"tailwindcss": "^3.0.24",
		"typescript": "~4.6.4",
		"unplugin-vue-components": "^0.19.6",
		"vite": "^2.9.9",
		"vite-plugin-pages": "^0.23.0",
		"vue-tsc": "^0.34.16"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
