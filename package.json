{
	"name": "stranerd",
	"description": "Stranerd App",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"serve": "yarn env:copy:app && vue-cli-service serve",
		"build": "yarn env:copy:app && vue-cli-service build",
		"test:unit": "vue-cli-service test:unit",
		"test:e2e": "vue-cli-service test:e2e",
		"lint": "vue-cli-service lint",
		"prepare": "husky install",
		"env:copy:example": "copy env.example.json env.json",
		"env:copy:app": "node bin/copy-env-app",
		"cap:run": "yarn cap run",
		"cap:sync": "yarn cap sync",
		"bin:google:set": "node bin/set-google-client-id.js set",
		"bin:google:reset": "node bin/set-google-client-id.js reset",
		"android:debug:apk": "yarn bin:google:set && yarn build && yarn cap:sync && cd android && ./gradlew assembleDebug && ./gradlew installDebug && cd .. && yarn bin:google:reset",
		"android:release:apk": "yarn bin:google:set && yarn build && yarn cap:sync && cd android && ./gradlew assembleRelease && cd .. && yarn android:sign:apk && yarn bin:google:reset",
		"android:release:bundle": "yarn bin:google:set && yarn build && yarn cap:sync && cd android && ./gradlew bundleRelease && cd .. && yarn android:sign:bundle && yarn bin:google:reset",
		"android:sign:bundle": "apksigner sign --ks ./android/stranerd.keystore --ks-key-alias kevin@stranerd.com  --min-sdk-version 22 ./android/app/build/outputs/bundle/release/app-release.aab",
		"android:sign:apk": "zipalign 4 ./android/app/build/outputs/apk/release/app-release-unsigned.apk ./android/app/build/outputs/apk/release/app-release.apk && apksigner sign --ks ./android/stranerd.keystore --ks-key-alias kevin@stranerd.com ./android/app/build/outputs/apk/release/app-release.apk"
	},
	"dependencies": {
		"@capacitor-community/http": "^1.4.1",
		"@capacitor/android": "^3.4.0",
		"@capacitor/app": "1.1.0",
		"@capacitor/clipboard": "^1.0.7",
		"@capacitor/core": "3.4.0",
		"@capacitor/dialog": "^1.0.7",
		"@capacitor/haptics": "1.1.4",
		"@capacitor/ios": "^3.4.0",
		"@capacitor/keyboard": "1.2.1",
		"@capacitor/share": "^1.1.1",
		"@capacitor/splash-screen": "^1.2.1",
		"@capacitor/status-bar": "1.0.7",
		"@capacitor/storage": "^1.2.4",
		"@capacitor/toast": "^1.0.7",
		"@codetrix-studio/capacitor-google-auth": "^3.0.2",
		"@ionic/pwa-elements": "^3.1.1",
		"@ionic/vue": "^6.0.4",
		"@ionic/vue-router": "^6.0.4",
		"@stranerd/validate": "^1.7.0",
		"axios": "^0.25.0",
		"core-js": "^3.20.3",
		"katex": "^0.15.2",
		"pdfvuer": "^2.0.1",
		"socket.io-client": "^4.4.1",
		"sweetalert2": "^11.3.10",
		"vue": "^3.2.21",
		"vue-router": "^4.0.12",
		"vue3-editor": "^0.1.0-alpha.3",
		"vue3-youtube": "^0.1.9",
		"youtube-video-exists": "^0.1.2"
	},
	"devDependencies": {
		"@capacitor/cli": "3.4.0",
		"@commitlint/cli": "^16.1.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@ionic/lab": "^3.2.10",
		"@types/vue2-editor": "^2.6.1",
		"@typescript-eslint/eslint-plugin": "^2.33.0",
		"@typescript-eslint/parser": "^4.31.0",
		"@vue/cli-plugin-babel": "~4.5.15",
		"@vue/cli-plugin-eslint": "~4.5.15",
		"@vue/cli-plugin-router": "~4.5.15",
		"@vue/cli-plugin-typescript": "~4.5.15",
		"@vue/cli-service": "~4.5.15",
		"@vue/compiler-sfc": "^3.2.29",
		"@vue/eslint-config-typescript": "^5.0.2",
		"autoprefixer": "^9.8.7",
		"eslint": "^6.7.2",
		"eslint-plugin-vue": "^7.0.0-0",
		"husky": "^7.0.4",
		"ionic": "^5.4.16",
		"node-sass": "^6.0.1",
		"postcss": "^7.0.38",
		"sass-loader": "^10.1.1",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
		"typescript": "^4.5.5"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
